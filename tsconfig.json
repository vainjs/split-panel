{
  "compilerOptions": {
    "strict": true,
    "declaration": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "rootDir": ".",
    "noImplicitThis": false,
    "esModuleInterop": true,
    "target": "ES2020",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "module": "ESNext",
    "lib": [
      "esnext",
      "dom"
    ],
  },
  "exclude": [
    "node_modules",
    "src/**/__tests__/*"
  ],
  "include": [
    "src/**/*"
  ]
}
